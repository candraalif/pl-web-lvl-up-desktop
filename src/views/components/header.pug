                          li
                            input(type='radio', name='country-language', id='en' value='/en', checked=region == 'en')
                            label(for='en')
                              .language-currency-info
                                +icon('ic-flag-circular-global')
                                | Global (English)
                              .language-currency-status
                                +icon('ic-system-checkmark')
                          li
                            input(type='radio', name='country-language', id='en-my' value='#')
                            label(for='en-my')
