                              .language-currency-info
                                +icon('ic-flag-circular-ph')
                                | Philippines (English)
                              .language-currency-status
                                +icon('ic-system-checkmark')
                          li
                            input(type='radio', name='country-language', id='en-sg' value='#')
                            label(for='en-sg')
                              .language-currency-info
                                +icon('ic-flag-circular-sg')
                                | Singapore (English)
                              .language-currency-status
                                +icon('ic-system-checkmark')
                          li
                            input(type='radio', name='country-language', id='en-th' value='#')
                            label(for='en-th')
                              .language-currency-info
                                +icon('ic-flag-circular-th')
                                | Thailand (English)
                              .language-currency-status
                                +icon('ic-system-checkmark')
                          li
                            input(type='radio', name='country-language', id='th-th' value='#')
                            label(for='th-th')
                              .language-currency-info
                                +icon('ic-flag-circular-th')
                                | ไทย (ภาษาไทย)
                              .language-currency-status
                                +icon('ic-system-checkmark')
                          li
                            input(type='radio', name='country-language', id='vi-vn' value='#')
                            label(for='vi-vn')
                              .language-currency-info
                                +icon('ic-flag-circular-vn')
                                | Việt Nam (Tiếng Việt)
                              .language-currency-status
                                +icon('ic-system-checkmark')
                          li
                            input(type='radio', name='country-language', id='en-vn' value='#')
                            label(for='en-vn')
                              .language-currency-info
                                +icon('ic-flag-circular-vn')
                                | Vietnam (English)
                              .language-currency-status
                                +icon('ic-system-checkmark')
                          li
                            input(type='radio', name='country-language', id='en-au' value='#')
                            label(for='en-au')
                              .language-currency-info
                                +icon('ic-flag-circular-au')
                                | Australia (English)
                              .language-currency-status
                                +icon('ic-system-checkmark')
                      .col.currency-submit
                        .currency
                          h3 Currency
                          ul
                            li
                              input(type='radio', name='currency', id='idr' value='idr', checked=region == 'en-id')
                              label(for='idr')
                                .language-currency-info
                                  strong IDR
                                  span.text-muted Indonesian Rupiah
                                .language-currency-status
                                  +icon('ic-system-checkmark')
                            li
                              input(type='radio', name='currency', id='aud' value='aud')
                              label(for='aud')
                                .language-currency-info
                                  strong AUD
                                  span.text-muted Australian Dollar
                                .language-currency-status
                                  +icon('ic-system-checkmark')
                            li
                              input(type='radio', name='currency', id='eur' value='eur')
                              label(for='eur')
                                .language-currency-info
                                  strong EUR
                                  span.text-muted Euro
                                .language-currency-status
                                  +icon('ic-system-checkmark')
                            li
                              input(type='radio', name='currency', id='usd' value='usd', checked=region == 'en')
                              label(for='usd')
                                .language-currency-info
                                  strong USD
                                  span.text-muted US Dollar
                                .language-currency-status
                                  +icon('ic-system-checkmark')
                        .language-currency-submit
                          a.btn.btn-primary.btn-small(href=region === 'en-id' ? '/en-id' : '/en') Done
            li.menu__item
              a.menu__link(href='#')
