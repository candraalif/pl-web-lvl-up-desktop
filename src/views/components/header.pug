mixin menu(region,isLogin)
  // Top Banner
  -var topBgImage = '/assets/images/top-banner-background.png'
  -var topBgColor = '#0194F3'
  -var topFontColor = '#FFF'
  #top-banner(style='background-image:url('+topBgImage+');background-color:'+topBgColor+';')
    .container
      .top-banner-grid
        a.top-banner-content(href='#')
          img(src=require('images/top-banner-image-content.png'), alt='top image banner')
          //- span(style='color:'+topFontColor) Unlock member-only deals and manage your bookings with ease.
        .top-banner-close
          a.btn.btn-pills.btn-top-baner-close(href='#')
            | Close
            +icon('ic-system-cross-close')
  header
    // Header
    -var region = `${region}`
    -var isLogin = `${isLogin}`
    case region
      when 'en-id'
        -var loginUrl = '/en-id-login'
        -var logoutUrl = '/en-id'
      default
        -var loginUrl = '/en-login'
        -var logoutUrl = '/en'
    #header
      .container
        nav.menu
          a.menu__brand(href='/')
            img.header-default.brand-background(src=require('images/brand-ornament.svg'))
            img.header-default(src=require('images/traveloka-logo-white.png'), alt="Traveloka", title="Traveloka", class="image")
            img.header-white(src=require('images/traveloka-logo.png'), alt="Traveloka", title="Traveloka", class="image")
          ul.menu__ul
            li.menu__item
              .menu__link(data-has-dropdown='true', data-dropdown='language-country')
                .dropdown-trigger
                  .language-country-flag(class=region === 'en-id' ? 'active' : '')
                    +icon('ic-flag-rectangle-id')
                  .language-country-flag(class=region === 'en' ? 'active' : '')
                    <svg class="header-default" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                      <g fill="none" fill-rule="evenodd">
                        <rect width="24" height="24"></rect>
                        <circle cx="12" cy="12" r="10" stroke="#FFFFFF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></circle>
                        <path stroke="#FFFFFF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12,22 C15.0375661,22 17.5,17.5228475 17.5,12 C17.5,6.4771525 15.0375661,2 12,2 C8.96243388,2 6.5,6.4771525 6.5,12 C6.5,17.5228475 8.96243388,22 12,22 Z M12,22 L12,2 M22,12 L2,12"></path>
                      </g>
                    </svg>
                    <svg class="header-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                      <g fill="none" fill-rule="evenodd">
                        <rect width="24" height="24"></rect>
                        <circle cx="12" cy="12" r="10" stroke="#0194f3" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></circle>
                        <path stroke="#0194f3" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12,22 C15.0375661,22 17.5,17.5228475 17.5,12 C17.5,6.4771525 15.0375661,2 12,2 C8.96243388,2 6.5,6.4771525 6.5,12 C6.5,17.5228475 8.96243388,22 12,22 Z M12,22 L12,2 M22,12 L2,12"></path>
                      </g>
                    </svg>
                  | EN | IDR
                  <svg class="dropdown-chevron header-default" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 9L12 15L18 9" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                  </svg>
                  <svg class="dropdown-chevron header-white" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
