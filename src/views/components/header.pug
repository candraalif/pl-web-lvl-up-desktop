mixin menu(currentPage)
  header#header
    .container
      nav.menu
        a.menu__brand(href='/', class=currentPage === 'homepage' ? 'active' : '')
          img.logo-white(src=require('images/traveloka-logo-white.png'), alt="Traveloka", title="Traveloka", class="image")
          img.logo-default(src=require('images/traveloka-logo.png'), alt="Traveloka", title="Traveloka", class="image")
        ul.menu__ul
          li.menu__item
            a.menu__link(href='/en-id', class=currentPage === 'homepage' ? 'active' : '')
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <g fill="none" fill-rule="evenodd">
                  <rect width="24" height="24"></rect>
                  <circle cx="12" cy="12" r="10" stroke="#FFFFFF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></circle>
                  <path stroke="#FFFFFF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12,22 C15.0375661,22 17.5,17.5228475 17.5,12 C17.5,6.4771525 15.0375661,2 12,2 C8.96243388,2 6.5,6.4771525 6.5,12 C6.5,17.5228475 8.96243388,22 12,22 Z M12,22 L12,2 M22,12 L2,12"></path>
                </g>
              </svg>
              | EN
          li.menu__item
            a.menu__link(href='#')
              | IDR
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 9L12 15L18 9" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
              </svg>
          li.menu__item
            a.menu__link(href='#', class=currentPage === 'partner' ? 'active' : '') Partner
          li.menu__item
            a.menu__link(href='#', class=currentPage === 'support' ? 'active' : '') Support
          li.menu__item
            a.menu__link(href='#', class=currentPage === 'deals' ? 'active' : '')
              img.icon-16(src=require('images/payment-coupon.svg'), alt="Deals")
              | Deals
          li.menu__item
            a.menu__link(href='#', class=currentPage === 'booking' ? 'active' : '') Booking
          li.menu__item
            a.menu__link.btn.btn-outline.btn-small(href='#', class=currentPage === 'profile' ? 'active' : '')
              img.avatar(src=require('images/user-avatar.png'), alt="User Avatar")
              | Hi, Raisa
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 9L12 15L18 9" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
              </svg>
