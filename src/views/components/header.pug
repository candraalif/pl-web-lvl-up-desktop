                  </svg>
                .dropdown-container(data-dropdown='language-country')
                  form(action='/', method='POST')
                    .row.language-currency
                      .col.country-language
                        h3 Country & Language
                        ul
                          li
                            input(type='radio', name='country-language', id='id-id' value='#')
                            label(for='id-id')
                              .language-currency-info
                                +icon('ic-flag-circular-id')
                                | Indonedia (Bahasa Indonesia)
                              .language-currency-status
                                +icon('ic-system-checkmark')
