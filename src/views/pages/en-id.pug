    //-     +icon('ic-system-arrow-right')
    //-     h3 Continue your search
    section.enhance-trip.merchandising
      .container
        .merch-title
          h3 Enhance your trip the way you like it
        .merch-content
          .row
            .col
              a.image-link.merch-card(href='#')
                img(src=require('images/enhance-card-1.png'))
            .col
              a.image-link.merch-card(href='#')
